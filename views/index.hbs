  <div class="col-md-6">
    <h3>Create a New Post:</h3>

    <form class="form new-post">
      <div class="form-group">
        <label for="post-comment">Type Post Here:</label>
        <textarea class="form-input" id="post"></textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Send</button>
      </div>
    </form>
  </div>

  {{#if posts.length}}
    <div class="col-md-6 post-container">
        <h3>My Posts:</h3>

        {{#each posts as |posts|}}
        <div class="row mb-2">
            <div class="col-md-8">
                <h4><a href="/post/{{post.id}}">{{post.post}}</a></h4>
            </div>
            <div class="col-md-4">
                <button class="btn btn-sm btn-danger" data-id="{{post.id}}">DELETE</button>
            </div>
        </div>
        {{/each}}
    </div>
  {{/if}}
    </div>
        {{else}}
        <a href="/login">Log In</a>
